<!DOCTYPE html>
<html lang="hi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pending Fees Report</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">üìö Coaching Management</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/students">Students</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/students/add">Add Student</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle active" href="#" id="feesDropdown" role="button" data-bs-toggle="dropdown">
                            Fees
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/fees/history">Payment History</a></li>
                            <li><a class="dropdown-item active" href="/fees/pending">Pending Fees</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <% if (typeof success_msg !== 'undefined' && success_msg && success_msg.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= success_msg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <% if (typeof error_msg !== 'undefined' && error_msg && error_msg.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error_msg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                <h3 class="mb-0">‚ö†Ô∏è Pending Fees Report</h3>
            </div>
            <div class="card-body">
                <% if (!pendingReport || pendingReport.length === 0) { %>
                    <div class="alert alert-success text-center">
                        <h4>üéâ Great News!</h4>
                        <p class="mb-0">All students have paid their fees. No pending dues!</p>
                    </div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>Student ID</th>
                                    <th>Name</th>
                                    <th>Class</th>
                                    <th>Phone</th>
                                    <th>Monthly Fees</th>
                                    <th>Total Expected</th>
                                    <th>Total Paid</th>
                                    <th>Pending Months</th>
                                    <th>Pending Amount</th>
                                    <th>Last Payment</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% 
                                let totalPending = 0;
                                let totalExpectedSum = 0;
                                let totalPaidSum = 0;
                                
                                pendingReport.forEach(report => { 
                                    totalPending += (report.pendingAmount || 0);
                                    totalExpectedSum += (report.totalExpected || 0);
                                    totalPaidSum += (report.totalPaid || 0);
                                %>
                                    <tr>
                                        <td><strong><%= report.student.studentId %></strong></td>
                                        <td><%= report.student.name %></td>
                                        <td><%= report.student.class %></td>
                                        <td><%= report.student.phone %></td>
                                        <td>‚Çπ<%= report.student.monthlyFees.toLocaleString('en-IN') %></td>
                                        <td>‚Çπ<%= (report.totalExpected || 0).toLocaleString('en-IN') %></td>
                                        <td class="text-success">‚Çπ<%= (report.totalPaid || 0).toLocaleString('en-IN') %></td>
                                        <td>
                                            <% const months = report.pendingMonths || 0; %>
                                            <% if (months >= 3) { %>
                                                <span class="badge bg-danger"><%= months %> months</span>
                                            <% } else if (months >= 2) { %>
                                                <span class="badge bg-warning"><%= months %> months</span>
                                            <% } else if (months >= 1) { %>
                                                <span class="badge bg-info"><%= months %> month</span>
                                            <% } else { %>
                                                <span class="badge bg-success">0 months</span>
                                            <% } %>
                                        </td>
                                        <td class="text-danger fw-bold">‚Çπ<%= (report.pendingAmount || 0).toLocaleString('en-IN') %></td>
                                        <td>
                                            <% if (report.student.lastPaymentDate) { %>
                                                <%= new Date(report.student.lastPaymentDate).toLocaleDateString('en-IN') %>
                                            <% } else { %>
                                                <span class="text-muted">No payment</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <a href="/students/view/<%= report.student._id %>" class="btn btn-sm btn-info" title="View Details">
                                                üëÅÔ∏è View
                                            </a>
                                            <a href="/fees/pay/<%= report.student._id %>" class="btn btn-sm btn-success" title="Pay Fees">
                                                üí∞ Pay
                                            </a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                            <tfoot class="table-secondary">
                                <tr>
                                    <th colspan="5" class="text-end">Total:</th>
                                    <th>‚Çπ<%= totalExpectedSum.toLocaleString('en-IN') %></th>
                                    <th class="text-success">‚Çπ<%= totalPaidSum.toLocaleString('en-IN') %></th>
                                    <th>-</th>
                                    <th class="text-danger">‚Çπ<%= totalPending.toLocaleString('en-IN') %></th>
                                    <th colspan="2"></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <div class="mt-4">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="card bg-primary text-white">
                                    <div class="card-body text-center">
                                        <h6>Total Students</h6>
                                        <h3><%= pendingReport.length %></h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-info text-white">
                                    <div class="card-body text-center">
                                        <h6>Expected Amount</h6>
                                        <h3>‚Çπ<%= totalExpectedSum.toLocaleString('en-IN') %></h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-success text-white">
                                    <div class="card-body text-center">
                                        <h6>Collected Amount</h6>
                                        <h3>‚Çπ<%= totalPaidSum.toLocaleString('en-IN') %></h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-danger text-white">
                                    <div class="card-body text-center">
                                        <h6>Pending Amount</h6>
                                        <h3>‚Çπ<%= totalPending.toLocaleString('en-IN') %></h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-3">
                        <div class="alert alert-warning">
                            <strong>üìä Summary:</strong>
                            <ul class="mb-0">
                                <li>Students with Pending Fees: <strong><%= pendingReport.length %></strong></li>
                                <li>Students with 3+ months pending: <strong><%= pendingReport.filter(r => (r.pendingMonths || 0) >= 3).length %></strong></li>
                                <li>Students with 2 months pending: <strong><%= pendingReport.filter(r => (r.pendingMonths || 0) === 2).length %></strong></li>
                                <li>Students with 1 month pending: <strong><%= pendingReport.filter(r => (r.pendingMonths || 0) === 1).length %></strong></li>
                            </ul>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>

        <div class="mt-4 mb-4">
            <a href="/" class="btn btn-secondary">‚Üê Back to Home</a>
            <button onclick="window.print()" class="btn btn-primary">üñ®Ô∏è Print Report</button>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>