<!DOCTYPE html>
<html lang="hi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Students</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">üìö Coaching Management</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/students">Students</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/students/add">Add Student</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="feesDropdown" role="button" data-bs-toggle="dropdown">
                            Fees
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/fees/history">Payment History</a></li>
                            <li><a class="dropdown-item" href="/fees/pending">Pending Fees</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <!-- Flash Messages -->
        <% if (typeof success_msg !== 'undefined' && success_msg && success_msg.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= success_msg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <% if (typeof error_msg !== 'undefined' && error_msg && error_msg.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error_msg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <div class="card shadow">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h3 class="mb-0">üë• All Students</h3>
                <a href="/students/add" class="btn btn-light">‚ûï Add New</a>
            </div>
            <div class="card-body">
                <% if (!students || students.length === 0) { %>
                    <div class="alert alert-info text-center">
                        <h5>No students found!</h5>
                        <p>Click "Add New" button to add your first student.</p>
                    </div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>Student ID</th>
                                    <th>Name</th>
                                    <th>Class</th>
                                    <th>Phone</th>
                                    <th>Monthly Fees</th>
                                    <th>Pending Months</th>
                                    <th>Total Due</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% students.forEach(student => { 
                                    // Safety checks for all values
                                    const studentId = student.studentId || 'N/A';
                                    const name = student.name || 'Unknown';
                                    const studentClass = student.class || 'N/A';
                                    const phone = student.phone || 'N/A';
                                    const monthlyFees = student.monthlyFees || 0;
                                    const pendingMonths = student.pendingMonths || 0;
                                    const totalDue = pendingMonths * monthlyFees;
                                    const status = student.status || 'Active';
                                %>
                                    <tr>
                                        <td><strong><%= studentId %></strong></td>
                                        <td><%= name %></td>
                                        <td><%= studentClass %></td>
                                        <td><%= phone %></td>
                                        <td>‚Çπ<%= monthlyFees.toLocaleString('en-IN') %></td>
                                        <td>
                                            <% if (pendingMonths > 0) { %>
                                                <span class="badge bg-warning text-dark"><%= pendingMonths %> months</span>
                                            <% } else { %>
                                                <span class="badge bg-success">Paid</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (totalDue > 0) { %>
                                                <span class="text-danger fw-bold">‚Çπ<%= totalDue.toLocaleString('en-IN') %></span>
                                            <% } else { %>
                                                <span class="text-success">‚Çπ0</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (status === 'Active') { %>
                                                <span class="badge bg-success">Active</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">Inactive</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="/students/view/<%= student._id %>" class="btn btn-sm btn-info" title="View Details">
                                                    üëÅÔ∏è
                                                </a>
                                                <a href="/fees/pay/<%= student._id %>" class="btn btn-sm btn-success" title="Pay Fees">
                                                    üí∞
                                                </a>
                                                <form action="/students/<%= student._id %>?_method=DELETE" method="POST" style="display:inline;" 
                                                      onsubmit="return confirm('Are you sure you want to delete <%= name %>?');">
                                                    <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                                        üóëÔ∏è
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Summary Statistics -->
                    <div class="mt-3">
                        <div class="row">
                            <div class="col-md-12">
                                <p class="text-muted">
                                    <strong>Total Students:</strong> <%= students.length %> |
                                    <strong>Active:</strong> <%= students.filter(s => s.status === 'Active').length %> |
                                    <strong>Inactive:</strong> <%= students.filter(s => s.status === 'Inactive').length %>
                                </p>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Back Button -->
        <div class="mt-4 mb-4">
            <a href="/" class="btn btn-secondary">‚Üê Back to Home</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>